<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/dessertItemBackgroundImage"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_margin="7dp"
        android:src="@drawable/cakesdessert"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_margin="7dp"
        android:background="#ffffff"
        android:layout_height="match_parent"
        android:padding="15dp">

        <TextView
            android:id="@+id/tvDessertOptionName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:padding="5dp"
            android:textStyle="bold"
            android:text="Cake"
            android:textColor="@color/colorPrimary"/>

        <TextView
            android:id="@+id/tvDessertDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="One Cuisine Type"
            android:layout_below="@+id/restaurantNameTextView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textStyle="italic"/>

    </LinearLayout>

